---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';
import BaseLayout from '../layouts/BaseLayout.astro';
import Map from '../components/Map.astro';

const pagesData = yaml.load(readFileSync('src/data/pages.yaml', 'utf8')) as {
  contacts: {
    title: string;
    description: string;
  };
};

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  name: string;
  contact: {
    phone: string;
    name: string;
    email: string;
    telegram: string;
  };
};

// Base64 encode contact info for obfuscation
const encode = (str: string) => Buffer.from(str).toString('base64');
const phoneEncoded = encode(siteData.contact.phone);
const phoneHrefEncoded = encode('tel:' + siteData.contact.phone.replace(/\s/g, ''));
const emailEncoded = encode(siteData.contact.email);
const emailHrefEncoded = encode('mailto:' + siteData.contact.email);
const telegramEncoded = encode('@' + siteData.contact.telegram);
const telegramHrefEncoded = encode('https://t.me/' + siteData.contact.telegram);
---

<BaseLayout title={pagesData.contacts.title} description={pagesData.contacts.description}>
  <section class="section-edge section-padding contacts-header">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="kicker mb-3">Контакты</p>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-display text-white mb-6">
        Свяжитесь с нами
      </h1>
      <p class="text-lg md:text-xl text-gray-300 max-w-2xl leading-relaxed">
        Свяжитесь с нами через социальные сети или приходите к нам в клуб.
      </p>
    </div>
  </section>

  <section class="section-edge py-12 md:py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid gap-6 md:grid-cols-3">
        <a data-h={phoneHrefEncoded} class="contact-card">
          <span class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </span>
          <div>
            <div class="text-white font-display text-xl contact-value" data-v={phoneEncoded}></div>
            <div class="text-sm text-gray-500 mt-1">{siteData.contact.name}</div>
          </div>
        </a>

        <a data-h={emailHrefEncoded} class="contact-card">
          <span class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </span>
          <div>
            <div class="text-white font-display text-xl contact-value" data-v={emailEncoded}></div>
            <div class="text-sm text-gray-500 mt-1">Почта</div>
          </div>
        </a>

        <a data-h={telegramHrefEncoded} target="_blank" rel="noopener noreferrer" class="contact-card">
          <span class="contact-icon">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </span>
          <div>
            <div class="text-white font-display text-xl contact-value" data-v={telegramEncoded}></div>
            <div class="text-sm text-gray-500 mt-1">Организатор</div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <Map />
</BaseLayout>

<style>
  .contacts-header {
    background: linear-gradient(180deg, rgba(12, 12, 12, 0.6), rgba(0, 0, 0, 0));
  }

  .contacts-header.section-edge::after {
    opacity: 0.3;
  }

  .contact-card {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem;
    align-items: center;
    padding: 1.25rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.02);
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .contact-card:hover {
    background: rgba(255, 255, 255, 0.04);
  }

  .contact-icon {
    width: 2.5rem;
    height: 2.5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
    background: rgba(227, 67, 67, 0.12);
    color: #f1b2b2;
  }
</style>

<script>
  // Decode and display contact info
  const d = (s: string) => atob(s);

  document.querySelectorAll('.contact-value').forEach(el => {
    const v = el.getAttribute('data-v');
    if (v) el.textContent = d(v);
  });

  document.querySelectorAll('.contact-card').forEach(el => {
    const h = el.getAttribute('data-h');
    if (h) el.setAttribute('href', d(h));
  });
</script>
