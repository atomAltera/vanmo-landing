<style>
  .contacts-header {
    background: linear-gradient(180deg, rgba(12, 12, 12, 0.6), rgba(0, 0, 0, 0));
  }

  .contacts-header.section-edge::after {
    opacity: 0.3;
  }

  .contact-card {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem;
    align-items: center;
    padding: 1.25rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.02);
    cursor: pointer;
    transition: background 0.2s ease;
  }

  .contact-card:hover {
    background: rgba(255, 255, 255, 0.04);
  }

  .contact-icon {
    width: 2.5rem;
    height: 2.5rem;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 9999px;
    background: rgba(227, 67, 67, 0.12);
    color: #f1b2b2;
  }

  .organizer-block {
    padding: 1.25rem;
    border-radius: 1rem;
    background: rgba(255, 255, 255, 0.02);
  }

  .contact-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #c7c7c7;
    transition: color 0.2s ease;
  }

  .contact-row:hover {
    color: #fff;
  }

  /* Copyable elements */
  .copyable {
    border: none;
    font: inherit;
    text-align: left;
  }

  .contact-card.copyable {
    width: 100%;
  }

  .contact-row.copyable {
    background: none;
    padding: 0;
  }

  :root.day-mode .contact-card,
  :root.day-mode .organizer-block {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.06);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.05);
  }

  :root.day-mode .contact-card:hover {
    background: #f9fafb;
  }

  :root.day-mode .contact-row {
    color: #4b5563;
  }

  :root.day-mode .contact-row:hover {
    color: #111827;
  }

  :root.day-mode .contacts-header {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0));
  }

  :root.day-mode .contacts-header.section-edge::after {
    opacity: 0.55;
  }

  :root.day-mode .contact-icon {
    color: #b91c1c;
    background: rgba(227, 67, 67, 0.14);
  }

  :root.day-mode .contact-row .text-gray-500 {
    color: #6b7280 !important;
  }
</style>

<script>
  // Decode base64
  const d = (s: string) => atob(s);

  // Display decoded contact values
  document.querySelectorAll('.contact-value').forEach(el => {
    const v = el.getAttribute('data-v');
    if (v) el.textContent = d(v);
  });

  // Set href for non-copyable links
  document.querySelectorAll('.contact-card:not(.copyable), .contact-row:not(.copyable)').forEach(el => {
    const h = el.getAttribute('data-h');
    if (h) el.setAttribute('href', d(h));
  });

  // Copy to clipboard with cross-browser support
  async function copyToClipboard(text: string): Promise<boolean> {
    // Modern Clipboard API (Chrome, Firefox, Safari 13.1+)
    if (navigator.clipboard && navigator.clipboard.writeText) {
      try {
        await navigator.clipboard.writeText(text);
        return true;
      } catch {
        // Fall through to fallback
      }
    }

    // Fallback for older browsers and Safari
    const textarea = document.createElement('textarea');
    textarea.value = text;
    textarea.style.position = 'fixed';
    textarea.style.left = '-9999px';
    textarea.style.top = '0';
    textarea.setAttribute('readonly', '');
    document.body.appendChild(textarea);

    // iOS Safari requires special handling
    const selection = window.getSelection();

    if (selection) {
      selection.removeAllRanges();
      textarea.select();
      textarea.setSelectionRange(0, textarea.value.length); // iOS Safari

      try {
        document.execCommand('copy');
        document.body.removeChild(textarea);
        return true;
      } catch {
        document.body.removeChild(textarea);
        return false;
      }
    }

    document.body.removeChild(textarea);
    return false;
  }

  // Handle copy clicks
  document.querySelectorAll('.copyable').forEach(el => {
    el.addEventListener('click', async (e) => {
      e.preventDefault();
      const encoded = el.getAttribute('data-copy');
      if (!encoded) return;

      const text = d(encoded);
      const success = await copyToClipboard(text);

      if (success) {
        (window as any).showToast('Скопировано в буфер обмена');
      } else {
        (window as any).showToast('Не удалось скопировать');
      }
    });
  });
</script>
