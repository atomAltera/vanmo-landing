---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';
import BaseLayout from '../layouts/BaseLayout.astro';
import Map from '../components/Map.astro';

const pagesData = yaml.load(readFileSync('src/data/pages.yaml', 'utf8')) as {
  contacts: {
    title: string;
    description: string;
  };
};

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  name: string;
  contact: {
    phone: string;
    name: string;
    email: string;
    telegram: string;
  };
};
---

<BaseLayout title={pagesData.contacts.title} description={pagesData.contacts.description}>
  <section class="py-16 md:py-20">
    <div class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl font-bold text-white mb-6">
        Контакты
      </h1>
      <p class="text-lg text-gray-300 mb-12">
        Свяжитесь с нами через социальные сети или приходите к нам в клуб.
      </p>

      <div class="grid gap-6 md:grid-cols-3 mb-12">
        <a href={`tel:${siteData.contact.phone.replace(/\s/g, '')}`} class="bg-neutral-950 rounded-lg p-6 border border-white/10 hover:border-red-500/50 transition-colors">
          <div class="text-red-500 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div class="text-white font-semibold">{siteData.contact.phone}</div>
          <div class="text-gray-400 text-sm">{siteData.contact.name}</div>
        </a>

        <a href={`mailto:${siteData.contact.email}`} class="bg-neutral-950 rounded-lg p-6 border border-white/10 hover:border-red-500/50 transition-colors">
          <div class="text-red-500 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mx-auto" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <div class="text-white font-semibold">{siteData.contact.email}</div>
          <div class="text-gray-400 text-sm">Почта</div>
        </a>

        <a href={`https://t.me/${siteData.contact.telegram}`} target="_blank" rel="noopener noreferrer" class="bg-neutral-950 rounded-lg p-6 border border-white/10 hover:border-red-500/50 transition-colors">
          <div class="text-red-500 mb-3">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 mx-auto" fill="currentColor" viewBox="0 0 24 24">
              <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
            </svg>
          </div>
          <div class="text-white font-semibold">@{siteData.contact.telegram}</div>
          <div class="text-gray-400 text-sm">Организатор</div>
        </a>
      </div>
    </div>
  </section>

  <Map />
</BaseLayout>
