---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';
import BaseLayout from '../layouts/BaseLayout.astro';

const pagesData = yaml.load(readFileSync('src/data/pages.yaml', 'utf8')) as {
  rules: {
    title: string;
    description: string;
  };
};

const rules = [
  {
    title: "Уважайте других игроков",
    description: "Относитесь к соперникам и партнёрам с уважением. Личные оскорбления недопустимы."
  },
  {
    title: "Приходите вовремя",
    description: "Игра начинается строго по расписанию. Опоздавшие могут не попасть в текущий раунд."
  },
  {
    title: "Следуйте указаниям ведущего",
    description: "Ведущий — главный судья игры. Его решения обязательны для всех участников."
  },
  {
    title: "Не разглашайте роли",
    description: "Во время игры запрещено показывать свою карту или раскрывать роль до окончания партии."
  },
  {
    title: "Отключите телефоны",
    description: "Использование телефонов во время игры отвлекает и нарушает атмосферу."
  },
  {
    title: "Получайте удовольствие",
    description: "Главная цель — хорошо провести время. Играйте честно и наслаждайтесь процессом!"
  }
];
---

<BaseLayout title={pagesData.rules.title} description={pagesData.rules.description}>
  <section class="section-edge py-16 md:py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <p class="kicker mb-2">Регламент</p>
        <h1 class="text-4xl md:text-5xl font-display text-white">
          Правила клуба
        </h1>
        <p class="text-lg text-gray-300 mt-4">
          Соблюдение правил помогает создать комфортную атмосферу для всех участников.
        </p>
      </div>
      <ol class="grid gap-6">
        {rules.map((rule, index) => (
          <li class="glass-card rounded-2xl p-6 md:p-7">
            <h2 class="text-xl font-semibold text-white mb-2 flex items-center gap-4">
              <span class="flex-shrink-0 w-10 h-10 border border-red-500/60 text-red-100 rounded-full flex items-center justify-center text-sm font-bold">
                {(index + 1).toString().padStart(2, '0')}
              </span>
              {rule.title}
            </h2>
            <p class="text-gray-300 ml-14">
              {rule.description}
            </p>
          </li>
        ))}
      </ol>
    </div>
  </section>
</BaseLayout>
