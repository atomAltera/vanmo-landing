---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  name: string;
};

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/rules', label: 'Rules' },
  { href: '/contacts', label: 'Contacts' },
];
---

<header class="bg-white border-b border-gray-200">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="text-xl font-bold text-gray-900 hover:text-gray-700 transition-colors">
        {siteData.name}
      </a>
      <ul class="flex space-x-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-600 hover:text-gray-900 transition-colors font-medium"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>
