---
import headerLogoLight from '../assets/images/vanmo-header-logo-light.png';
import headerLogoDark from '../assets/images/vanmo-header-logo-dark.png';

const navItems = [
  { href: '/', label: 'Главная' },
  { href: '/rules', label: 'Правила' },
  { href: '/contacts', label: 'Контакты' },
];
---

<div class="header-wrapper">
  <input type="checkbox" id="mobile-menu-toggle" class="sr-only" aria-hidden="true" />

  <header class="bg-neutral-950/70 border-b border-white/10 backdrop-blur relative">
    <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Главное меню">
      <div class="flex justify-between items-center h-16">
        <a href="/" class="block hover:opacity-80 transition-opacity">
          <img src={headerLogoLight.src} alt="VANMO" class="header-logo-light h-8 w-auto" />
          <img src={headerLogoDark.src} alt="VANMO" class="header-logo-dark h-8 w-auto" />
        </a>

        <!-- Theme Toggle (center) -->
        <button
          id="theme-toggle-desktop"
          onclick="window.toggleTheme()"
          class="theme-toggle theme-toggle-centered"
          aria-label="Переключить тему"
        >
          <span class="theme-toggle-track">
            <span class="theme-toggle-orb"></span>
            <span class="theme-toggle-icon theme-toggle-moon" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
              </svg>
            </span>
            <span class="theme-toggle-icon theme-toggle-sun" aria-hidden="true">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
              </svg>
            </span>
          </span>
        </button>

        <!-- Desktop nav -->
        <div class="hidden md:flex items-center">
          <ul class="flex space-x-8 text-sm uppercase tracking-[0.18em]">
            {navItems.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="nav-link hover:text-white transition-colors font-medium"
                >
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Hamburger button -->
        <label
          for="mobile-menu-toggle"
          class="md:hidden flex flex-col justify-center items-center w-10 h-10 cursor-pointer group"
          aria-label="Открыть меню"
        >
          <span class="hamburger-line block w-6 h-0.5 bg-gray-400 group-hover:bg-white my-0.5 origin-center transition-all duration-300"></span>
          <span class="hamburger-line block w-6 h-0.5 bg-gray-400 group-hover:bg-white my-0.5 transition-all duration-300"></span>
          <span class="hamburger-line block w-6 h-0.5 bg-gray-400 group-hover:bg-white my-0.5 origin-center transition-all duration-300"></span>
        </label>
      </div>
    </nav>
  </header>

  <!-- Mobile menu overlay -->
  <label
    for="mobile-menu-toggle"
    class="mobile-overlay fixed inset-0 bg-black/60 backdrop-blur-sm z-40 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden"
    aria-hidden="true"
  ></label>

  <!-- Mobile nav menu -->
  <div class="mobile-menu fixed top-0 right-0 h-screen w-64 bg-neutral-950 border-l border-white/10 z-50 translate-x-full transition-transform duration-300 ease-out md:hidden">
    <div class="flex justify-end p-4">
      <label
        for="mobile-menu-toggle"
        class="w-10 h-10 flex items-center justify-center text-gray-400 hover:text-white cursor-pointer transition-colors"
        aria-label="Закрыть меню"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </label>
    </div>
    <ul class="flex flex-col px-6 space-y-6 text-sm uppercase tracking-[0.18em]">
      {navItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="nav-link hover:text-white transition-colors font-medium block py-2"
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
    <div class="px-6 mt-8 pt-6 border-t border-white/10">
      <span class="text-xs uppercase tracking-[0.18em] text-gray-500">Тема</span>
    </div>
  </div>
</div>

<style is:global>
  /* Header theme styles */
  .header-wrapper header {
    background: var(--theme-header-bg);
    border-color: var(--theme-border);
    transition: background 0.3s ease, border-color 0.3s ease;
  }

  /* Logo switching based on theme */
  .header-logo-light {
    display: block;
  }
  .header-logo-dark {
    display: none;
  }

  :root.day-mode .header-logo-light {
    display: none;
  }
  :root.day-mode .header-logo-dark {
    display: block;
  }

  .nav-link {
    color: var(--theme-text-muted);
  }

  .hamburger-line {
    background-color: var(--theme-text-muted) !important;
  }

  /* Mobile menu */
  #mobile-menu-toggle:checked ~ header nav .hamburger-line:nth-child(1) {
    transform: rotate(45deg) translateY(6px);
  }

  #mobile-menu-toggle:checked ~ header nav .hamburger-line:nth-child(2) {
    opacity: 0;
  }

  #mobile-menu-toggle:checked ~ header nav .hamburger-line:nth-child(3) {
    transform: rotate(-45deg) translateY(-6px);
  }

  #mobile-menu-toggle:checked ~ .mobile-overlay {
    opacity: 1;
    pointer-events: auto;
  }

  #mobile-menu-toggle:checked ~ .mobile-menu {
    --tw-translate-x: 0 !important;
  }

  .mobile-menu {
    background: var(--theme-bg-secondary);
    border-color: var(--theme-border);
  }

  /* Theme Toggle - Capsule Switch */
  .theme-toggle {
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }

  .theme-toggle-centered {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    z-index: 2;
  }

  .theme-toggle-track {
    position: relative;
    width: 80px;
    height: 32px;
    border-radius: 9999px;
    padding: 3px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    align-items: center;
    justify-items: center;
    background: radial-gradient(circle at 20% 20%, rgba(120, 180, 255, 0.35), transparent 55%),
      linear-gradient(135deg, rgba(15, 15, 18, 0.98), rgba(4, 4, 8, 0.9));
    border: 1px solid rgba(255, 255, 255, 0.18);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.04), 0 8px 20px rgba(0, 0, 0, 0.35);
    transition: background 0.35s ease, border-color 0.35s ease, box-shadow 0.35s ease;
    --orb-x: 0px;
  }

  .theme-toggle:hover .theme-toggle-track {
    border-color: rgba(255, 255, 255, 0.35);
    box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.08), 0 10px 24px rgba(0, 0, 0, 0.45);
  }

  .theme-toggle-orb {
    position: absolute;
    width: 34px;
    height: 24px;
    border-radius: 9999px;
    left: 3px;
    top: 4px;
    transform: translateX(var(--orb-x));
    background: linear-gradient(145deg, rgba(255, 255, 255, 0.18), rgba(255, 255, 255, 0.05));
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.35), inset 0 0 0 1px rgba(255, 255, 255, 0.14);
    transition: transform 0.35s ease, background 0.35s ease, box-shadow 0.35s ease;
    z-index: 1;
  }

  .theme-toggle-icon {
    position: relative;
    z-index: 2;
    width: 14px;
    height: 14px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.6);
    transition: color 0.35s ease, transform 0.35s ease;
    pointer-events: none;
  }

  .theme-toggle-icon svg {
    width: 14px;
    height: 14px;
  }

  .theme-toggle-moon {
    justify-self: center;
  }

  .theme-toggle-sun {
    justify-self: center;
  }

  :root:not(.day-mode) .theme-toggle-moon {
    color: #f3c176;
    transform: translateX(1px) scale(1.03);
  }

  :root:not(.day-mode) .theme-toggle-sun {
    color: rgba(255, 255, 255, 0.4);
  }

  /* Day mode: move orb right to sun */
  :root.day-mode .theme-toggle-track {
    --orb-x: 40px;
    background: radial-gradient(circle at 80% 20%, rgba(255, 223, 128, 0.45), transparent 55%),
      linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(230, 234, 240, 0.92));
    border-color: rgba(17, 24, 39, 0.2);
    box-shadow: inset 0 0 0 1px rgba(17, 24, 39, 0.06), 0 10px 20px rgba(15, 23, 42, 0.18);
  }

  :root.day-mode .theme-toggle-orb {
    background: linear-gradient(145deg, rgba(17, 24, 39, 0.14), rgba(17, 24, 39, 0.04));
    box-shadow: 0 6px 12px rgba(15, 23, 42, 0.16), inset 0 0 0 1px rgba(17, 24, 39, 0.08);
  }

  :root.day-mode .theme-toggle-moon {
    color: rgba(17, 24, 39, 0.45);
  }

  :root.day-mode .theme-toggle-sun {
    color: rgba(17, 24, 39, 0.95);
    transform: translateX(-1px) scale(1.03);
  }
</style>
