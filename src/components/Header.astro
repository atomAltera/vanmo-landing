---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  name: string;
};

const navItems = [
  { href: '/', label: 'Главная' },
  { href: '/rules', label: 'Правила' },
  { href: '/contacts', label: 'Контакты' },
];
---

<header class="bg-neutral-950/70 border-b border-white/10 backdrop-blur">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Главное меню">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="text-2xl font-display text-white hover:text-red-500 transition-colors">
        {siteData.name}
      </a>
      <ul class="flex space-x-8 text-sm uppercase tracking-[0.18em]">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-400 hover:text-white transition-colors font-medium"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>
