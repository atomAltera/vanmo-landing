---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  name: string;
};

const navItems = [
  { href: '/', label: 'Главная' },
  { href: '/rules', label: 'Правила' },
  { href: '/contacts', label: 'Контакты' },
];
---

<header class="bg-[--color-brand-darker] border-b border-white/10">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8" aria-label="Главное меню">
    <div class="flex justify-between items-center h-16">
      <a href="/" class="text-xl font-bold text-white hover:text-[--color-brand-red] transition-colors">
        {siteData.name}
      </a>
      <ul class="flex space-x-8">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="text-gray-300 hover:text-white transition-colors font-medium"
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>
