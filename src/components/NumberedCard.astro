---
interface Props {
  index: number;
  title: string;
  body?: string;
  bodyHtml?: string;
  as?: 'div' | 'li';
  titleClass?: string;
  bodyClass?: string;
  class?: string;
}

const {
  index,
  title,
  body,
  bodyHtml,
  as = 'div',
  titleClass = '',
  bodyClass = '',
  class: className = ''
} = Astro.props;

const Wrapper = as;
const formattedIndex = (index + 1).toString().padStart(2, '0');
const baseTitleClass = 'text-lg md:text-xl font-semibold text-white flex items-start gap-4';
const baseBodyClass = 'text-gray-300 ml-14 mt-3';
---

<Wrapper class={`glass-card rounded-2xl p-6 md:p-7 ${className}`.trim()}>
  <div class={`${baseTitleClass} ${titleClass}`.trim()}>
    <span class="flex-shrink-0 w-10 h-10 border border-red-500/60 text-red-100 rounded-full flex items-center justify-center text-sm font-bold">
      {formattedIndex}
    </span>
    <span class="pt-1">{title}</span>
  </div>
  {bodyHtml ? (
    <div class={`${baseBodyClass} ${bodyClass}`.trim()} set:html={bodyHtml} />
  ) : body ? (
    <p class={`${baseBodyClass} ${bodyClass}`.trim()}>{body}</p>
  ) : (
    <div class={`${baseBodyClass} ${bodyClass}`.trim()}>
      <slot />
    </div>
  )}
</Wrapper>
