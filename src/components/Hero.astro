    </div>
  </div>
</section>

<style>
  .hero-section {
    background-color: #171717;
    background-image: radial-gradient(ellipse 80% 50% at 50% 0%, rgba(120, 20, 20, 0.15) 0%, transparent 60%);
  }

  .pattern-layer {
    position: absolute;
    inset: -50%;
    width: 200%;
    height: 200%;
    background-repeat: repeat;
    transform: rotate(-15deg);
    z-index: 0;
    pointer-events: none;
  }

  .hero-section > div:not(.pattern-layer) {
    position: relative;
    z-index: 1;
  }
</style>

<script>
  // Icon SVG paths (normalized to same viewBox for consistency)
  const icons = {
    pistol: {
      viewBox: '0 0 512 512',
      path: 'M79.238 115.768l-28.51 67.863h406.15l-.273-67.862h-263.83v55.605h-15v-55.605h-16.68v55.605H146.1v-55.605h-17.434v55.605h-15v-55.605H79.238zm387.834 15.96v40.66h18.688v-40.66h-18.688zM56.768 198.63l20.566 32.015L28.894 406.5l101.68 7.174 21.54-97.996h115.74l14.664-80.252 174.55-3.873-.13-32.922H56.767zM263.44 235.85l-11.17 61.142h-96.05l12.98-59.05 12.53-.278-2.224 35.5 14.262 13.576 1.003-33.65 24.69-16.264 43.98-.976z'
    },
    star: {
      viewBox: '0 0 24 24',
      content: '<polygon points="12,2 3.34,17 20.66,17"/><polygon points="12,22 3.34,7 20.66,7"/><circle cx="12" cy="2" r="1.5"/><circle cx="20.66" cy="7" r="1.5"/><circle cx="20.66" cy="17" r="1.5"/><circle cx="12" cy="22" r="1.5"/><circle cx="3.34" cy="17" r="1.5"/><circle cx="3.34" cy="7" r="1.5"/>'
    },
    tie: {
      viewBox: '0 0 448 512',
      path: 'M224 256c70.7 0 128-57.3 128-128S294.7 0 224 0 96 57.3 96 128s57.3 128 128 128zm95.8 32.6L272 480l-32-136 32-56h-96l32 56-32 136-47.8-191.4C56.9 292 0 350.3 0 422.4V464c0 26.5 21.5 48 48 48h352c26.5 0 48-21.5 48-48v-41.6c0-72.1-56.9-130.4-128.2-133.8z'
    },
    ring: {
      viewBox: '0 0 512 512',
      path: 'M208.938 17.97c-13.894.144-26.622 4.908-40.188 15.75 7.633 73.023 19.398 143.54 37.875 209.936a6675.8 6675.8 0 0 0-31.75 2.938c-33.053-48.484-54.967-99.41-79.625-149.688-9.44-1.246-22.32 1.357-33.156 7.313-11.402 6.266-19.932 15.677-22.438 25.343C71.46 196.07 111.698 266.145 154 327.28c9.054 11.43 17.052 23.375 24.875 35.25l2.875 4.064-.28-.125c6.728 10.225 13.405 20.334 20.593 29.905l-14.938 11.22c-14.106-18.783-25.76-38.085-38.5-55.97-38.74-17.315-76.235-28.38-99.406-25.656-11.762 1.382-19.233 5.41-24.19 13.405-4.422 7.136-6.682 18.965-5.124 36.22 79.18 19.67 123.834 59.914 154.406 86.186 12.823 11.02 25.426 21.245 40.875 29.876h123.907c31.69-13.563 55.702-35.645 61.187-62.594 4.722-23.186 16.166-62.177 21.658-85.53 8.962-38.116 26.388-84.71 41.875-121.813 7.743-18.553 14.995-34.673 20.5-46.157 2.752-5.743 5.072-10.326 6.875-13.594.196-.358.347-.582.53-.907-4.203-10.426-12.018-20.034-21.25-26.125-9.175-6.056-18.988-8.51-27.218-6.813-22.354 39.967-42.723 81.287-57.344 129.28-8.878-3.5-17.872-6.378-27-8.717a606.76 606.76 0 0 1-.437-39.25l-63.283-6.657c-.43 12.35-.513 24.76-.25 37.22-8.34-.305-16.75-.336-25.187-.188C252.074 167.83 240.845 96.008 238.062 24c-9.497-3.54-18.01-5.662-26.03-5.97-.103-.003-.21-.027-.313-.03-.94-.03-1.856-.04-2.782-.03zm133.28 5.593c-8.137-.057-15.44 1.7-20.343 4.75-9.082 35.02-16.254 70.32-20.938 106l62.844 6.625c4.51-33.684 11.667-66.423 20.876-98.344-6.824-8.614-18.617-15.165-30.97-17.782a57.566 57.566 0 0 0-11.467-1.25zm-55.624 128.093c-.466-.016-.91-.002-1.313.03-2.424.2-3.8 1.24-5.31 2.97-2.017 2.31-3.667 6.495-4 11.094-.336 4.6.67 9.41 2.374 12.47 1.703 3.058 3.323 4.302 6.156 4.624l85.438 9h.125l.125.03c4.954.658 7.17-.55 9.343-2.81 2.173-2.264 3.885-6.28 4.25-10.75.367-4.472-.633-9.162-2.5-12.283-1.83-3.063-3.906-4.732-7.592-5.25l-.188-.03-85.313-8.97h-.093a20.748 20.748 0 0 0-1.5-.124z'
    }
  };

  // Shuffle array using Fisher-Yates
  function shuffle<T>(array: T[]): T[] {
    const arr = [...array];
    for (let i = arr.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [arr[i], arr[j]] = [arr[j], arr[i]];
    }
    return arr;
  }

  // Create a row of 10 icons: 2 pistols, 6 ties, 1 ring, 1 star
  function createIconRow(): string[] {
    const row = [
      'pistol', 'pistol',
      'tie', 'tie', 'tie', 'tie', 'tie', 'tie',
      'ring',
      'star'
    ];
    return shuffle(row);
  }

  // Generate SVG content for an icon
  function renderIcon(iconName: string, x: number, y: number, size: number): string {
    const icon = icons[iconName as keyof typeof icons];
    const [, , vbW, vbH] = icon.viewBox.split(' ').map(Number);

    // Scale to fit in size while maintaining aspect ratio
    const scale = size / Math.max(vbW, vbH);
    const offsetX = (size - vbW * scale) / 2;
    const offsetY = (size - vbH * scale) / 2;

    if ('content' in icon) {
      return `<g transform="translate(${x + offsetX}, ${y + offsetY}) scale(${scale})">${icon.content}</g>`;
    } else {
      return `<path d="${icon.path}" transform="translate(${x + offsetX}, ${y + offsetY}) scale(${scale})"/>`;
    }
  }

  // Generate the full pattern SVG
  function generatePattern(): string {
    const iconSize = 18;  // Actual icon size
    const gap = 8;        // Gap between icons
    const cellSize = iconSize + gap;
    const cols = 10;
    const rows = 4;
    const width = cols * cellSize;
    const height = rows * cellSize;

    let content = '';

    for (let row = 0; row < rows; row++) {
      const iconRow = createIconRow();
      for (let col = 0; col < cols; col++) {
        const x = col * cellSize + gap / 2;
        const y = row * cellSize + gap / 2;
        content += renderIcon(iconRow[col], x, y, iconSize);
      }
    }

    return `<svg xmlns="http://www.w3.org/2000/svg" width="${width}" height="${height}" viewBox="0 0 ${width} ${height}">
      <g fill="white" fill-opacity="0.04">${content}</g>
    </svg>`;
  }

  // Apply pattern to background
  function applyPattern() {
    const svg = generatePattern();
    const encoded = encodeURIComponent(svg);
    const dataUrl = `url("data:image/svg+xml,${encoded}")`;

    const patternLayer = document.querySelector('.pattern-layer') as HTMLElement;
    if (patternLayer) {
      patternLayer.style.backgroundImage = dataUrl;
    }
  }

  // Run on page load
  applyPattern();
</script>
