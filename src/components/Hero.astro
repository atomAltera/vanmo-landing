---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const heroData = yaml.load(readFileSync('src/data/hero.yaml', 'utf8')) as {
  headline: string;
  subtext: string;
  cta: {
    text: string;
    link: string;
  };
};
---

<section class="bg-neutral-950 py-20 md:py-32">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6 leading-tight">
      {heroData.headline}
    </h1>
    <p class="text-lg md:text-xl text-gray-300 mb-10 max-w-2xl mx-auto">
      {heroData.subtext}
    </p>
    <a
      href={heroData.cta.link}
      class="inline-block bg-red-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-red-700 transition-colors focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 focus:ring-offset-neutral-950"
    >
      {heroData.cta.text}
    </a>
  </div>
</section>
