<!-- Pass icon data to client script -->
<script is:inline define:vars={{ icons }}>
  window.__PATTERN_ICONS__ = icons;
</script>

<style>
  .hero-section {
    background-color: #171717;
    background-image: radial-gradient(ellipse 80% 50% at 50% 0%, rgba(120, 20, 20, 0.15) 0%, transparent 60%);
  }

  .pattern-layer {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, 26px);
    grid-template-rows: repeat(auto-fill, 26px);
    justify-content: center;
    overflow: hidden;
  }

  .pattern-layer svg {
    width: 18px;
    height: 18px;
    fill: white;
    opacity: 0.05;
    transition: opacity 0.3s ease;
  }

  .hero-section > div:not(.pattern-layer) {
    position: relative;
    z-index: 1;
  }
</style>

<script>
  // Get icons loaded from files at build time
  const icons = (window as any).__PATTERN_ICONS__ as Record<string, { viewBox: string; content: string }>;

  // Icon distribution
  const iconPool = ['pistol', 'pistol', 'tie', 'tie', 'tie', 'tie', 'tie', 'tie', 'ring', 'star'];

  function getRandomIcon(): string {
    return iconPool[Math.floor(Math.random() * iconPool.length)];
  }

  // Icon colors
  const iconColors: Record<string, string> = {
    tie: '#ef4444',      // red
    pistol: '#ffffff',   // white
    star: '#eab308',     // gold
    ring: '#a855f7',     // violet
  };

  // Create SVG element for an icon
  function createIconSvg(iconName: string): SVGSVGElement {
    const icon = icons[iconName];
    const svg = document.createElementNS('http://www.w3.org/2000/svg', 'svg');
    svg.setAttribute('viewBox', icon.viewBox);
    svg.setAttribute('width', '18');
    svg.setAttribute('height', '18');
    svg.style.fill = iconColors[iconName] || 'white';
    svg.innerHTML = icon.content;
    return svg;
  }

  // Initialize the grid and animation
  function initMatrixRain() {
    const container = document.querySelector('.pattern-layer') as HTMLElement;
    if (!container) return;

    const cellSize = 26;
    const cols = Math.ceil(window.innerWidth / cellSize) + 2;
    const rows = Math.ceil(container.offsetHeight / cellSize) + 2;

    // Create grid of icons
    const allIcons: SVGSVGElement[][] = [];

    for (let row = 0; row < rows; row++) {
      allIcons[row] = [];
      for (let col = 0; col < cols; col++) {
        const svg = createIconSvg(getRandomIcon());
        container.appendChild(svg);
        allIcons[row][col] = svg;
      }
    }

    // Static random opacity pattern
    for (let row = 0; row < rows; row++) {
      for (let col = 0; col < cols; col++) {
        const opacity = 0.02 + Math.random() * 0.12;
        allIcons[row][col].style.opacity = opacity.toString();
      }
    }
  }

  // Run on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initMatrixRain);
  } else {
    initMatrixRain();
  }
</script>
