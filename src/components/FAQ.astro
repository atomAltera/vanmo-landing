---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const faqData = yaml.load(readFileSync('src/data/faq.yaml', 'utf8')) as Array<{
  question: string;
  answer: string;
}>;

// Simple markdown link parser for FAQ answers
function parseLinks(text: string): string {
  return text.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" class="text-red-500 underline hover:no-underline">$1</a>');
}
---

<section class="section-edge py-16 md:py-20 bg-neutral-950/80">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12 reveal">
      <p class="kicker mb-2">FAQ</p>
      <h2 class="text-3xl md:text-4xl font-display text-white">
        Часто задаваемые вопросы
      </h2>
    </div>
    <dl class="grid gap-6 md:grid-cols-2">
      {faqData.map((item, index) => (
        <div class="glass-card rounded-2xl p-6 reveal">
          <dt class="flex items-start gap-4">
            <span class="text-4xl font-display text-white/60 leading-none">
              {(index + 1).toString().padStart(2, '0')}
            </span>
            <span class="text-lg font-semibold text-white">
              {item.question}
            </span>
          </dt>
          <dd class="text-gray-300 mt-3" set:html={parseLinks(item.answer)} />
        </div>
      ))}
    </dl>
  </div>
</section>
