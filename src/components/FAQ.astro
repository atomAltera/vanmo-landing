---
// FAQ content hardcoded directly in component
const faqData = [
  {
    question: "Что такое спортивная мафия?",
    answer: 'Спортивная мафия — это командная психологическая игра с чёткими правилами и судейством. В отличие от обычной мафии, здесь важны логика, аргументация и умение читать людей.'
  },
  {
    question: "Нужен ли опыт игры?",
    answer: 'Нет, мы рады как опытным игрокам, так и новичкам. Перед первой игрой мы объясним все правила и поможем освоиться.'
  },
  {
    question: "Как часто проходят игры?",
    answer: 'Каждую субботу и понедельник, следите за анонсами в нашем <a href="https://t.me/vanmo_mafia" class="text-red-500 underline hover:no-underline">Telegram-канале</a>.'
  },
  {
    question: "Сколько стоит участие?",
    answer: 'Игра стоит 20 GEL за вечер. Посмотреть игру можно бесплатно.'
  }
];

// FAQPage schema for SEO
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqData.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer.replace(/<[^>]*>/g, '') // Strip HTML for schema
    }
  }))
};
---

<section class="section-edge py-16 md:py-20 faq-section">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-12">
      <p class="kicker mb-3">FAQ</p>
      <h2 class="text-3xl md:text-4xl font-display text-white">
        Частые вопросы о клубе
      </h2>
      <p class="text-gray-400 mt-4 max-w-2xl">
        Короткие ответы для тех, кто планирует первую игру или хочет узнать детали.
      </p>
    </div>
    <dl class="space-y-8">
      {faqData.map((item, index) => (
        <div class="faq-row">
          <dt class="faq-title">
            <span class="faq-index">{(index + 1).toString().padStart(2, '0')}</span>
            <span>{item.question}</span>
          </dt>
          <dd class="faq-body" set:html={item.answer} />
        </div>
      ))}
    </dl>
  </div>
</section>

<!-- FAQPage Schema -->
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />

<style>
  .faq-section {
    background: linear-gradient(180deg, rgba(12, 12, 12, 0.5), rgba(0, 0, 0, 0));
  }

  .faq-section.section-edge::after {
    opacity: 0.2;
  }

  .faq-row {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  }

  .faq-row:last-child {
    border-bottom: 0;
    padding-bottom: 0;
  }

  .faq-title {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 1rem;
    align-items: center;
    font-size: 1.1rem;
    font-weight: 600;
    color: #fff;
  }

  .faq-index {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.25rem;
    height: 2.25rem;
    border-radius: 9999px;
    background: rgba(227, 67, 67, 0.12);
    color: rgba(255, 255, 255, 0.9);
    font-size: 0.8rem;
    font-weight: 600;
  }

  .faq-body {
    margin-left: 3.25rem;
    margin-top: 0.75rem;
    color: #c7c7c7;
    line-height: 1.7;
  }

  :root.day-mode .faq-section {
    background: linear-gradient(180deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0));
  }

  :root.day-mode .faq-section.section-edge::after {
    opacity: 0.4;
  }

  :root.day-mode .faq-row {
    border-bottom-color: rgba(0, 0, 0, 0.1);
  }

  :root.day-mode .faq-title {
    color: #1f2937;
  }

  :root.day-mode .faq-index {
    color: rgba(127, 29, 29, 0.9);
    background: rgba(227, 67, 67, 0.14);
  }

  :root.day-mode .faq-body {
    color: #4b5563;
  }
</style>
