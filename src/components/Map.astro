---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  address: {
    street: string;
    venue?: string;
    city: string;
    postalCode: string;
    coordinates: {
      lat: number;
      lng: number;
    };
  };
};

const { lat, lng } = siteData.address.coordinates;
const mapUrl = `https://www.google.com/maps?q=${lat},${lng}&z=17&output=embed`;
---

<section class="py-16 md:py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-white text-center mb-8">
      Как нас найти
    </h2>
    <address class="text-center text-gray-300 mb-8 not-italic">
      {siteData.address.venue && <p class="font-semibold text-white">{siteData.address.venue}</p>}
      <p>{siteData.address.street}, {siteData.address.city}</p>
    </address>
    <div class="aspect-video rounded-lg overflow-hidden border border-white/10">
      <iframe
        src={mapUrl}
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="Карта с местоположением"
      ></iframe>
    </div>
  </div>
</section>
