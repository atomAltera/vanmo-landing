---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  address: {
    street: string;
    venue?: string;
    city: string;
    postalCode: string;
    coordinates: {
      lat: number;
      lng: number;
    };
  };
};

const { lat, lng } = siteData.address.coordinates;
const mapUrl = `https://www.google.com/maps?q=${lat},${lng}&z=17&output=embed`;
---

<section class="section-edge py-16 md:py-20 map-section">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mb-8">
      <p class="kicker mb-2">Локация</p>
      <h2 class="text-3xl md:text-4xl font-display text-white">
        Как нас найти
      </h2>
      <p class="text-gray-400 mt-4 max-w-2xl">
        Уютное место для встречи перед игрой и спокойного старта вечера.
      </p>
    </div>
    <div class="rounded-2xl p-0">
      <address class="flex flex-wrap items-center gap-x-2 gap-y-1 text-gray-200 mb-4 not-italic">
        <span class="inline-flex items-center gap-2 text-sm uppercase tracking-[0.2em] text-gray-500">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.6">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 21s6-5.686 6-10a6 6 0 10-12 0c0 4.314 6 10 6 10z"/>
            <circle cx="12" cy="11" r="2.5" />
          </svg>
          адрес
        </span>
        {siteData.address.venue && <span class="font-semibold text-white">{siteData.address.venue}</span>}
        <span>{siteData.address.street}, {siteData.address.city}</span>
      </address>
      <div class="aspect-video rounded-xl overflow-hidden map-frame">
        <iframe
          src={mapUrl}
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="eager"
          referrerpolicy="no-referrer-when-downgrade"
          title="Карта с местоположением"
        ></iframe>
      </div>
    </div>
  </div>
</section>

<style>
  .map-frame {
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.25);
  }

  .map-section.section-edge::after {
    opacity: 0.25;
  }
</style>
