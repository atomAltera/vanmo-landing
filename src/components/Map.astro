---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  address: {
    street: string;
    venue?: string;
    city: string;
    postalCode: string;
    coordinates: {
      lat: number;
      lng: number;
    };
  };
};

const { lat, lng } = siteData.address.coordinates;
const mapUrl = `https://www.google.com/maps?q=${lat},${lng}&z=17&output=embed`;
---

<section class="section-edge py-16 md:py-20">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-8">
      <p class="kicker mb-2">Локация</p>
      <h2 class="text-3xl md:text-4xl font-display text-white">
        Как нас найти
      </h2>
    </div>
    <div class="rounded-2xl p-0">
      <address class="flex flex-wrap items-center justify-center gap-x-2 gap-y-1 text-center text-gray-200 mb-4 not-italic">
        {siteData.address.venue && <span class="font-semibold text-white">{siteData.address.venue}</span>}
        <span>{siteData.address.street}, {siteData.address.city}</span>
      </address>
      <div class="aspect-video rounded-xl overflow-hidden shadow-2xl">
        <iframe
          src={mapUrl}
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Карта с местоположением"
        ></iframe>
      </div>
    </div>
  </div>
</section>
