---
import yaml from 'js-yaml';
import { readFileSync } from 'fs';

const siteData = yaml.load(readFileSync('src/data/site.yaml', 'utf8')) as {
  about: string;
};
---

<section class="section-edge py-16 md:py-20">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="glass-card rounded-2xl p-8 md:p-10 reveal">
      <p class="kicker mb-3">О клубе</p>
      <h2 class="text-3xl md:text-4xl font-display text-white mb-4">
        Атмосфера, где решает психология
      </h2>
      <p class="text-lg text-gray-200 leading-relaxed">
        {siteData.about}
      </p>
    </div>
  </div>
</section>
